{% comment %}
  Schnappix 24/7 Hero Section
  Desktop: Text left, Image right
  Mobile: Image top, Text bottom
{% endcomment %}

{{ 'section-schnappix-hero.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #SchnappixHero-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    padding-top: {{ section.settings.section_padding_top }}rem;
    padding-bottom: {{ section.settings.section_padding_bottom }}rem;
  }

  #SchnappixHero-{{ section.id }}::before {
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
  }
{%- endstyle -%}

<section id="SchnappixHero-{{ section.id }}" class="schnappix-hero{% if section.settings.image != blank %} schnappix-hero--has-image{% endif %}">
  <div class="schnappix-hero__overlay"></div>
  
  <div class="page-width">
    <div class="schnappix-hero__container">
      {%- comment -%} Text Content (Left on desktop, Bottom on mobile) {%- endcomment -%}
      <div class="schnappix-hero__content schnappix-hero__content--align-{{ section.settings.content_alignment }}">
        {%- if section.settings.heading != blank -%}
          <h1 class="schnappix-hero__heading">
            {{ section.settings.heading }}
          </h1>
        {%- endif -%}

        {%- if section.settings.subheading != blank -%}
          <div class="schnappix-hero__subheading">
            {{ section.settings.subheading }}
          </div>
        {%- endif -%}

        {%- if section.settings.show_bullets and section.blocks.size > 0 -%}
          <ul class="schnappix-hero__list">
            {%- for block in section.blocks -%}
              {%- if block.type == 'bullet_point' and block.settings.text != blank -%}
                <li class="schnappix-hero__list-item" {{ block.shopify_attributes }}>
                  {{ block.settings.text }}
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        {%- endif -%}

        {%- if section.settings.primary_button_label != blank and section.settings.primary_button_link != blank -%}
          <div class="schnappix-hero__button-wrapper">
            <a href="{{ section.settings.primary_button_link }}" class="button button--primary schnappix-hero__button">
              {{ section.settings.primary_button_label }}
            </a>
          </div>
        {%- endif -%}
      </div>

      {%- comment -%} Hero Image (Right on desktop, Top on mobile) {%- endcomment -%}
      {%- if section.settings.image != blank -%}
        <div class="schnappix-hero__image-wrapper">
          {{
            section.settings.image
            | image_url: width: 1200
            | image_tag:
              loading: 'eager',
              fetchpriority: 'high',
              sizes: '(min-width: 990px) 50vw, 100vw',
              widths: '375, 550, 750, 1100, 1200',
              alt: section.settings.image.alt | default: 'Schnappix 24/7 Snack- und Getränkeautomat',
              class: 'schnappix-hero__image'
          }}
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Schnappix 24/7 Hero",
  "tag": "section",
  "class": "section",
  "category": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Smarter Umsatz – Moderne Automaten. Rund um die Uhr."
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Schnappix 24/7 bringt moderne Self-Service-Automaten mitten in den Alltag der Menschen. Snacks, Drinks, Hygiene – jederzeit verfügbar. Perfekt für Städte, Firmen, Fitnessstudios und mehr.</p>"
    },
    {
      "type": "checkbox",
      "id": "show_bullets",
      "label": "Show Bullet Points",
      "default": true
    },
    {
      "type": "text",
      "id": "primary_button_label",
      "label": "Primary Button Label",
      "default": "Jetzt Umsatzmöglichkeiten entdecken"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link",
      "default": "/pages/standorte-partner"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image",
      "info": "Recommended: 1200x800px or larger. Vending machine illustration."
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content Alignment (Desktop)",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "left"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "default": 0,
      "info": "Adds a dark overlay for better text readability"
    },
    {
      "type": "select",
      "id": "section_padding_top",
      "label": "Section Padding Top",
      "options": [
        {
          "value": "2",
          "label": "Small"
        },
        {
          "value": "4",
          "label": "Medium"
        },
        {
          "value": "6",
          "label": "Large"
        },
        {
          "value": "8",
          "label": "Extra Large"
        }
      ],
      "default": "4"
    },
    {
      "type": "select",
      "id": "section_padding_bottom",
      "label": "Section Padding Bottom",
      "options": [
        {
          "value": "2",
          "label": "Small"
        },
        {
          "value": "4",
          "label": "Medium"
        },
        {
          "value": "6",
          "label": "Large"
        },
        {
          "value": "8",
          "label": "Extra Large"
        }
      ],
      "default": "4"
    }
  ],
  "blocks": [
    {
      "type": "bullet_point",
      "name": "Bullet Point",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "100 % automatisiert – kein Personal nötig"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Schnappix 24/7 Hero",
      "blocks": [
        {
          "type": "bullet_point",
          "settings": {
            "text": "100 % automatisiert – kein Personal nötig"
          }
        },
        {
          "type": "bullet_point",
          "settings": {
            "text": "Stabile Margen & hohe Nachfrage an Hotspots"
          }
        },
        {
          "type": "bullet_point",
          "settings": {
            "text": "Premium-Automaten mit Telemetrie, KI & Remote-Monitoring"
          }
        },
        {
          "type": "bullet_point",
          "settings": {
            "text": "24/7 Einnahmen ohne täglichen Aufwand"
          }
        },
        {
          "type": "bullet_point",
          "settings": {
            "text": "Installation, Service & Betreuung durch Schnappix (optional)"
          }
        }
      ]
    }
  ]
}
{% endschema %}
