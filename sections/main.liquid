<div class="main-section">
  <h1>{{ section.settings.heading | default: 'Welcome' }}</h1>
  <p>{{ section.settings.description | default: 'This is your Shopify theme.' }}</p>
</div>

{% schema %}
{
  "name": "Main Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "This is your Shopify theme."
    }
  ]
}
{% endschema %}

