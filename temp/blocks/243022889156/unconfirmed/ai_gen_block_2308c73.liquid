{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-icon-feature-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px {{ block.settings.horizontal_padding }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-icon-feature-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-icon-feature-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    align-items: start;
  }

  .ai-icon-feature-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: {{ block.settings.alignment }};
    text-align: {{ block.settings.alignment }};
    gap: {{ block.settings.item_gap }}px;
  }

  .ai-icon-feature-icon-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.icon_background }};
    border-radius: {{ block.settings.icon_border_radius }}px;
    padding: {{ block.settings.icon_padding }}px;
    {% if block.settings.icon_glow %}
      box-shadow: 0 0 {{ block.settings.icon_glow_blur }}px rgba(241, 90, 41, {{ block.settings.icon_glow_opacity | divided_by: 100.0 }});
    {% endif %}
  }

  .ai-icon-feature-icon-wrapper-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    stroke: {{ block.settings.icon_color }};
    fill: none;
    stroke-width: {{ block.settings.icon_stroke_width }}px;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .ai-icon-feature-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    margin: 0;
    line-height: 1.3;
  }

  .ai-icon-feature-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-icon-feature-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap_mobile }}px;
    }

    .ai-icon-feature-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_mobile }}px {{ block.settings.horizontal_padding_mobile }}px;
    }

    .ai-icon-feature-icon-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size_mobile }}px;
      height: {{ block.settings.icon_size_mobile }}px;
    }

    .ai-icon-feature-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size_mobile }}px;
    }

    .ai-icon-feature-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-icon-feature-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
