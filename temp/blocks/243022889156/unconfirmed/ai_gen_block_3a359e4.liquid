{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-schnappix-header-{{ ai_gen_id }} {
    position: {% if block.settings.enable_sticky %}sticky{% else %}relative{% endif %};
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    {% if block.settings.background_style == 'gradient' %}
      background: linear-gradient(135deg, #0a0a14 0%, #1a1a2e 50%, #16213e 100%);
    {% elsif block.settings.background_style == 'solid' %}
      background: {{ block.settings.background_color }};
    {% else %}
      background: #000000;
      background-image: 
        repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(255,255,255,0.02) 2px, rgba(255,255,255,0.02) 4px),
        repeating-linear-gradient(90deg, transparent, transparent 2px, rgba(255,255,255,0.02) 2px, rgba(255,255,255,0.02) 4px);
    {% endif %}
  }

  .ai-schnappix-header-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(180deg, rgba(255,255,255,0.03) 0%, transparent 100%);
    pointer-events: none;
  }

  .ai-schnappix-header-{{ ai_gen_id }}.scrolled {
    {% if block.settings.enable_scroll_shadow %}
      box-shadow: 0 4px 20px rgba({{ block.settings.accent_color | color_extract: 'red' }}, {{ block.settings.accent_color | color_extract: 'green' }}, {{ block.settings.accent_color | color_extract: 'blue' }}, 0.08);
    {% endif %}
  }

  .ai-schnappix-header-inner-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: {{ block.settings.header_height_desktop }}px;
    padding: 0 {{ block.settings.horizontal_padding }}px;
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    position: relative;
    transition: height 0.3s ease;
  }

  .ai-schnappix-header-{{ ai_gen_id }}.scrolled .ai-schnappix-header-inner-{{ ai_gen_id }} {
    height: {{ block.settings.header_height_scrolled }}px;
  }

  .ai-schnappix-header-left-{{ ai_gen_id }},
  .ai-schnappix-header-right-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.icon_spacing }}px;
    flex: 1;
    opacity: 0;
    animation: ai-schnappix-slide-in-{{ ai_gen_id }} 0.4s ease-out 0.1s forwards;
  }

  .ai-schnappix-header-left-{{ ai_gen_id }} {
    justify-content: flex-start;
    animation-name: ai-schnappix-slide-in-left-{{ ai_gen_id }};
  }

  .ai-schnappix-header-right-{{ ai_gen_id }} {
    justify-content: flex-end;
    animation-name: ai-schnappix-slide-in-right-{{ ai_gen_id }};
  }

  .ai-schnappix-header-center-{{ ai_gen_id }} {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    opacity: 0;
    animation: ai-schnappix-logo-appear-{{ ai_gen_id }} 0.5s ease 0.15s forwards;
  }

  .ai-schnappix-logo-link-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    text-decoration: none;
    transition: filter 0.3s ease;
  }

  .ai-schnappix-logo-image-{{ ai_gen_id }} {
    max-width: {{ block.settings.logo_width }}px;
    height: auto;
    display: block;
    {% if block.settings.logo_glow %}
      filter: drop-shadow(0 0 {{ block.settings.logo_glow_blur }}px rgba({{ block.settings.accent_color | color_extract: 'red' }}, {{ block.settings.accent_color | color_extract: 'green' }}, {{ block.settings.accent_color | color_extract: 'blue' }}, {{ block.settings.logo_glow_opacity | divided_by: 100.0 }}));
    {% endif %}
  }

  .ai-schnappix-logo-text-{{ ai_gen_id }} {
    font-family: {{ block.settings.logo_font.family }}, {{ block.settings.logo_font.fallback_families }};
    font-weight: {{ block.settings.logo_font_weight }};
    font-size: {{ block.settings.logo_text_size }}px;
    letter-spacing: {{ block.settings.logo_letter_spacing }}px;
    text-transform: uppercase;
    color: {{ block.settings.logo_color }};
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 4px;
    {% if block.settings.logo_glow %}
      filter: drop-shadow(0 0 {{ block.settings.logo_glow_blur }}px rgba({{ block.settings.accent_color | color_extract: 'red' }}, {{ block.settings.accent_color | color_extract: 'green' }}, {{ block.settings.accent_color | color_extract: 'blue' }}, {{ block.settings.logo_glow_opacity | divided_by: 100.0 }}));
    {% endif %}
    transition: filter 0.3s ease;
  }

  .ai-schnappix-logo-text-{{ ai_gen_id }}:hover {
    {% if block.settings.logo_glow %}
      filter: drop-shadow(0 0 {{ block.settings.logo_glow_blur | times: 1.5 }}px rgba({{ block.settings.accent_color | color_extract: 'red' }}, {{ block.settings.accent_color | color_extract: 'green' }}, {{ block.settings.accent_color | color_extract: 'blue' }}, {{ block.settings.logo_glow_opacity | divided_by: 100.0 | times: 1.3 }}));
    {% endif %}
  }

  .ai-schnappix-logo-accent-{{ ai_gen_id }} {
    color: {{ block.settings.accent_color }};
  }

  .ai-schnappix-logo-tag-{{ ai_gen_id }} {
    font-size: {{ block.settings.logo_text_size | times: 0.5 }}px;
    opacity: 0.9;
  }

  .ai-schnappix-hamburger-{{ ai_gen_id }} {
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.hamburger_line_spacing }}px;
    transition: transform 0.3s ease;
  }

  .ai-schnappix-hamburger-{{ ai_gen_id }}:hover {
    transform: scale(1.05);
  }

  .ai-schnappix-hamburger-line-{{ ai_gen_id }} {
    width: {{ block.settings.hamburger_width }}px;
    height: {{ block.settings.hamburger_thickness }}px;
    background-color: {{ block.settings.icon_color }};
    border-radius: {{ block.settings.hamburger_border_radius }}px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .ai-schnappix-hamburger-{{ ai_gen_id }}.active .ai-schnappix-hamburger-line-{{ ai_gen_id }}:nth-child(1) {
    transform: rotate(45deg) translate({{ block.settings.hamburger_line_spacing | plus: 2 }}px, {{ block.settings.hamburger_line_spacing | plus: 2 }}px);
  }

  .ai-schnappix-hamburger-{{ ai_gen_id }}.active .ai-schnappix-hamburger-line-{{ ai_gen_id }}:nth-child(2) {
    opacity: 0;
  }

  .ai-schnappix-hamburger-{{ ai_gen_id }}.active .ai-schnappix-hamburger-line-{{ ai_gen_id }}:nth-child(3) {
    transform: rotate(-45deg) translate({{ block.settings.hamburger_line_spacing | plus: 2 }}px, -{{ block.settings.hamburger_line_spacing | plus: 2 }}px);
  }

  .ai-schnappix-icon-{{ ai_gen_id }} {
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
    position: relative;
    text-decoration: none;
    color: inherit;
  }

  .ai-schnappix-header-{{ ai_gen_id }}.scrolled .ai-schnappix-icon-{{ ai_gen_id }} {
    transform: scale({{ block.settings.icon_scale_scrolled | divided_by: 100.0 }});
  }

  .ai-schnappix-icon-{{ ai_gen_id }}:hover {
    transform: scale({{ block.settings.icon_scale_hover | divided_by: 100.0 }});
  }

  .ai-schnappix-icon-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    stroke: {{ block.settings.icon_color }};
    stroke-width: {{ block.settings.icon_stroke_width }}px;
    fill: none;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .ai-schnappix-cart-count-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.cart_badge_position_top }}px;
    right: {{ block.settings.cart_badge_position_right }}px;
    background-color: {{ block.settings.cart_badge_background }};
    color: {{ block.settings.cart_badge_text }};
    font-size: {{ block.settings.cart_badge_font_size }}px;
    font-weight: {{ block.settings.cart_badge_font_weight }};
    min-width: {{ block.settings.cart_badge_size }}px;
    height: {{ block.settings.cart_badge_size }}px;
    border-radius: {{ block.settings.cart_badge_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 4px;
  }

  @keyframes ai-schnappix-slide-in-left-{{ ai_gen_id }} {
    from {
      opacity: 0;
      transform: translateX(-16px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes ai-schnappix-slide-in-right-{{ ai_gen_id }} {
    from {
      opacity: 0;
      transform: translateX(16px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes ai-schnappix-logo-appear-{{ ai_gen_id }} {
    from {
      opacity: 0;
      transform: translate(-50%, calc(-50% + 4px));
    }
    to {
      opacity: 1;
      transform: translate(-50%, -50%);
    }
  }

  .ai-schnappix-icon-{{ ai_gen_id }}:nth-child(1) {
    animation-delay: 0.2s;
  }

  .ai-schnappix-icon-{{ ai_gen_id }}:nth-child(2) {
    animation-delay: 0.28s;
  }

  .ai-schnappix-icon-{{ ai_gen_id }}:nth-child(3) {
    animation-delay: 0.36s;
  }

  .ai-schnappix-icon-{{ ai_gen_id }}:nth-child(4) {
    animation-delay: 0.44s;
  }

  .ai-schnappix-icon-{{ ai_gen_id }}:nth-child(5) {
    animation-delay: 0.52s;
  }

  @media screen and (max-width: 749px) {
    .ai-schnappix-header-inner-{{ ai_gen_id }} {
      height: {{ block.settings.header_height_mobile }}px;
      padding: 0 {{ block.settings.horizontal_padding_mobile }}px;
    }

    .ai-schnappix-header-{{ ai_gen_id }}.scrolled .ai-schnappix-header-inner-{{ ai_gen_id }} {
      height: {{ block.settings.header_height_mobile | minus: 8 }}px;
    }

    .ai-schnappix-logo-image-{{ ai_gen_id }} {
      max-width: {{ block.settings.logo_width_mobile }}px;
    }

    .ai-schnappix-logo-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.logo_text_size_mobile }}px;
    }

    .ai-schnappix-logo-tag-{{ ai_gen_id }} {
      font-size: {{ block.settings.logo_text_size_mobile | times: 0.5 }}px;
    }

    .ai-schnappix-icon-{{ ai_gen_id }} svg {
      width: {{ block.settings.icon_size_mobile }}px;
      height: {{ block.settings.icon_size_mobile }}px;
    }

    .ai-schnappix-icon-hidden-mobile-{{ ai_gen_id }} {
      display: none;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .ai-schnappix-header-inner-{{ ai_gen_id }} {
      padding: 0 24px;
    }
  }
