{% doc %}
  @prompt
    A magazine-style editorial layout
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-editorial-layout-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.spacing }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-editorial-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-editorial-feature-{{ ai_gen_id }} {
    grid-column: span 12;
    position: relative;
    overflow: hidden;
  }

  .ai-editorial-feature-image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.feature_height }}px;
    object-fit: cover;
  }

  .ai-editorial-feature-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.feature_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-editorial-feature-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-editorial-feature-content-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: {{ block.settings.content_padding }}px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
    color: #ffffff;
  }

  .ai-editorial-feature-category-{{ ai_gen_id }} {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin-bottom: 8px;
    color: {{ block.settings.accent_color }};
    font-weight: 600;
  }

  .ai-editorial-feature-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.feature_title_size }}px;
    font-weight: 700;
    margin: 0 0 12px;
    line-height: 1.2;
  }

  .ai-editorial-feature-excerpt-{{ ai_gen_id }} {
    font-size: 16px;
    line-height: 1.6;
    margin: 0;
    opacity: 0.9;
  }

  .ai-editorial-secondary-{{ ai_gen_id }} {
    grid-column: span 12;
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-editorial-article-{{ ai_gen_id }} {
    grid-column: span 12;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-editorial-article-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    aspect-ratio: {{ block.settings.article_aspect_ratio }};
  }

  .ai-editorial-article-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-editorial-article-{{ ai_gen_id }}:hover .ai-editorial-article-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-editorial-article-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-editorial-article-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-editorial-article-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-editorial-article-category-{{ ai_gen_id }} {
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 1.2px;
    color: {{ block.settings.accent_color }};
    font-weight: 600;
  }

  .ai-editorial-article-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.article_title_size }}px;
    font-weight: 700;
    margin: 0;
    line-height: 1.3;
    color: {{ block.settings.text_color }};
  }

  .ai-editorial-article-excerpt-{{ ai_gen_id }} {
    font-size: 14px;
    line-height: 1.6;
    margin: 0;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
  }

  .ai-editorial-article-meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 12px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  .ai-editorial-divider-{{ ai_gen_id }} {
    width: 1px;
    height: 12px;
    background-color: currentColor;
    opacity: 0.3;
  }

  @media screen and (min-width: 750px) {
    .ai-editorial-article-{{ ai_gen_id }} {
      grid-column: span 6;
    }
  }

  @media screen and (min-width: 990px) {
    .ai-editorial-article-{{ ai_gen_id }} {
      grid-column: span 4;
    }
  }

  .ai-editorial-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }
{% endstyle %}

<div class="ai-editorial-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-editorial-grid-{{ ai_gen_id }}">
    {% if block.settings.show_feature %}
      <article class="ai-editorial-feature-{{ ai_gen_id }}">
        {% if block.settings.feature_image %}
          <img
            src="{{ block.settings.feature_image | image_url: width: 1600 }}"
            alt="{{ block.settings.feature_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.feature_image.width }}"
            height="{{ block.settings.feature_image.height }}"
            class="ai-editorial-feature-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-editorial-feature-placeholder-{{ ai_gen_id }}">
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
            <div class="ai-editorial-empty-state-{{ ai_gen_id }}">
              Add a feature image
            </div>
          </div>
        {% endif %}
        
        <div class="ai-editorial-feature-content-{{ ai_gen_id }}">
          {% if block.settings.feature_category != blank %}
            <div class="ai-editorial-feature-category-{{ ai_gen_id }}">
              {{ block.settings.feature_category }}
            </div>
          {% endif %}
          
          {% if block.settings.feature_title != blank %}
            <h2 class="ai-editorial-feature-title-{{ ai_gen_id }}">
              {{ block.settings.feature_title }}
            </h2>
          {% endif %}
          
          {% if block.settings.feature_excerpt != blank %}
            <p class="ai-editorial-feature-excerpt-{{ ai_gen_id }}">
              {{ block.settings.feature_excerpt }}
            </p>
          {% endif %}
        </div>
      </article>
    {% endif %}

    <div class="ai-editorial-secondary-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign article_image_key = 'article_' | append: i | append: '_image'
          assign article_category_key = 'article_' | append: i | append: '_category'
          assign article_title_key = 'article_' | append: i | append: '_title'
          assign article_excerpt_key = 'article_' | append: i | append: '_excerpt'
          assign article_author_key = 'article_' | append: i | append: '_author'
          assign article_date_key = 'article_' | append: i | append: '_date'

          assign article_image = block.settings[article_image_key]
          assign article_category = block.settings[article_category_key]
          assign article_title = block.settings[article_title_key]
          assign article_excerpt = block.settings[article_excerpt_key]
          assign article_author = block.settings[article_author_key]
          assign article_date = block.settings[article_date_key]
        %}

        <article class="ai-editorial-article-{{ ai_gen_id }}">
          <div class="ai-editorial-article-image-wrapper-{{ ai_gen_id }}">
            {% if article_image %}
              <img
                src="{{ article_image | image_url: width: 800 }}"
                alt="{{ article_image.alt | escape }}"
                loading="lazy"
                width="{{ article_image.width }}"
                height="{{ article_image.height }}"
                class="ai-editorial-article-image-{{ ai_gen_id }}"
              >
            {% else %}
              <div class="ai-editorial-article-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>

          <div class="ai-editorial-article-content-{{ ai_gen_id }}">
            {% if article_category != blank %}
              <div class="ai-editorial-article-category-{{ ai_gen_id }}">
                {{ article_category }}
              </div>
            {% endif %}

            {% if article_title != blank %}
              <h3 class="ai-editorial-article-title-{{ ai_gen_id }}">
                {{ article_title }}
              </h3>
            {% endif %}

            {% if article_excerpt != blank %}
              <p class="ai-editorial-article-excerpt-{{ ai_gen_id }}">
                {{ article_excerpt }}
              </p>
            {% endif %}

            {% if article_author != blank or article_date != blank %}
              <div class="ai-editorial-article-meta-{{ ai_gen_id }}">
                {% if article_author != blank %}
                  <span>{{ article_author }}</span>
                {% endif %}
                
                {% if article_author != blank and article_date != blank %}
                  <span class="ai-editorial-divider-{{ ai_gen_id }}"></span>
                {% endif %}
                
                {% if article_date != blank %}
                  <span>{{ article_date }}</span>
                {% endif %}
              </div>
            {% endif %}
          </div>
        </article>
      {% endfor %}
    </div>
  </div>
</div>

